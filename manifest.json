{
  "manifest_version": 2,

  "name": "Itgen.io. Расписание на неделю",
  "description": "Показывает расписание на неделю на сайте https://portal.itgen.io/schedule",
  "version": "1.3",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.itgen.io/*"],
      "css": ["styles.css"],
      "js": ["countries.js", "moment.min.js", "moment-timezone-with-data.min.js","script.js"]
    }
  ]
}
